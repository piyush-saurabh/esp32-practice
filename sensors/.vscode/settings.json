{
    "files.associations": {
        "*.h": "c",
        "*.ipp": "c"
    },
    // The port and buad rate for flashing and monitoring your device
    // This is the same port which is passed using "runArgs" in devcontainer.json
    "esp_device_port": "/dev/ttyUSB0",
    "esp_device_baud": 115200,
    
    // The tools needed for building, flashing, and debugging
    "esp_python_bin": "${env:IDF_TOOLS_PATH}/python_env/idf4.3_py3.6_env/bin",
    "esp_python": "${esp_python_bin}/python",
    "esp_idf_command": "${env:IDF_TOOLS_PATH}/python_env/idf4.3_py3.6_env/bin/python ${env:IDF_PATH}/tools/idf.py",

    "esp_elf_bin": "${env:IDF_TOOLS_PATH}/tools/xtensa-esp32-elf/esp-2021r2-8.4.0/xtensa-esp32-elf/bin",
    
    "esp_elf_binutils": "${env:IDF_TOOLS_PATH}/tools/esp32ulp-elf/2.28.51-esp-20191205/esp32ulp-elf-binutils/bin",

    "openocd_root_dir": "${env:IDF_TOOLS_PATH}/tools/openocd-esp32/v0.10.0-esp32-20211111/openocd-esp32",

    "esp_openocd_bin": "${env:IDF_TOOLS_PATH}/tools/openocd-esp32/v0.10.0-esp32-20211111/openocd-esp32/bin",

    "esp_extra_paths": "${env:IDF_TOOLS_PATH}/tools/cmake/3.16.4/bin:${env:IDF_TOOLS_PATH}/python_env/idf4.3_py3.6_env/bin:/usr/bin:${env:IDF_TOOLS_PATH}/tools/xtensa-esp32-elf/esp-2021r2-8.4.0/xtensa-esp32-elf/bin:${env:IDF_TOOLS_PATH}/tools/esp32ulp-elf/2.28.51-esp-20191205/esp32ulp-elf-binutils/bin:${env:IDF_TOOLS_PATH}/tools/openocd-esp32/v0.10.0-esp32-20211111/openocd-esp32/bin",

    "esp_gdb": "${env:IDF_TOOLS_PATH}/tools/xtensa-esp32-elf/esp-2021r2-8.4.0/xtensa-esp32-elf/bin/xtensa-esp32-elf-gdb",
    "cmake.configureOnOpen": false,
    "C_Cpp.errorSquiggles": "disabled",

}